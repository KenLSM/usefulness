alias adbr="adb reverse adb reverse tcp:8081 tcp:8081"

# captures what your attached android screen is displaying
# then pull it over to your cwd as screencap.png
alias adbsc="adb shell screencap -p /sdcard/screencap.png && adb pull /sdcard/screencap.png"

# screen recording
alias adbscr="adb shell screenrecord  /sdcard/adb-recording.mp4"

# pulling over to cwd as adb-recording.mp4
alias adbscrp="adb pull /sdcard/adb-recording.mp4"
